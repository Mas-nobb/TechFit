<style>
  /* 職業一覧画面 */
  .job-list {
    padding: 50px;
    text-align: center;
  }

  .job-list h2 {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .job {
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 20px;
    margin-bottom: 20px;
  }

  .job h3 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .job p {
    font-size: 18px;
    margin-bottom: 10px;
  }
</style>




<div class="job-list">
  <h2>職業一覧</h2>
  <% Job.all.each do |job| %>
    <div class="job">
      <h3><%= job.name %></h3>
      <p><%= job.description %></p>
      <p>適性: <%= job.suitable_for %></p>
      <p>平均年収: <%= job.average_salary %>円</p>
    </div>
  <% end %>
</div>


