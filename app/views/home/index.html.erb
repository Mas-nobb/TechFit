<style>
  /* ホームページ */
  .home {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: calc(100vh - 200px); /* フッターの高さを引く */
    text-align: center;
    padding: 50px;
  }

  .home h1 {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .home p {
    font-size: 18px;
    margin-bottom: 30px;
  }

  .cta-buttons {
    display: flex;
    justify-content: space-between;
    width: 800px;
    gap: 20px;
  }.cta-button {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  border: 2px solid #007bff;
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #007bff;
  color: #fff;
  font-size: 24px;
  font-weight: bold;
  transition: background-color 0.3s ease;
}

.cta-button span {
  position: relative;
  z-index: 1;
}

.cta-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.cta-button:hover {
  transform: scale(1.1);
}

.cta-button:hover::before {
  opacity: 1;
}

</style>
<main class="main-content home">
  <h1>Welcome to TechFit</h1>
  <p>Discover your perfect IT career!</p>
  <div class="cta-buttons">
    <%= link_to quizzes_path, class: "cta-button" do %>
      <span>Start Quiz</span>
    <% end %>
        <%= link_to jobs_path, class: "cta-button" do %>
      <span>View Job List</span>
    <% end %>
    <%= link_to cords_path, class: "cta-button" do %>
      <span>Code Experience</span>
    <% end %>
  </div>
</main>