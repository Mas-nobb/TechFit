<style>
.test-card {
  width: 300px;
  height: 500px;
  margin: 20px;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
}
.test-card img {
  width: 100%;
  height: 60%;
  object-fit: cover;
  border-radius: 10px;
}
.test-card h2 {
  margin: 20px 0;
}
.test-card p {
  margin: 10px 0;
}
a, a:link, a:visited {
    color: #fff;
    text-decoration: underline;
}
</style>

<%= render "shared/header" %>

<% @tests.each do |test| %>
  <div class="test-card">
    <h2><%= test.name %></h2>
    <p><%= test.description %></p>
    <p><%= test.category %></p>
    <% if test.image.attached? %>
      <img src="<%= url_for(test.image) %>" alt="<%= test.name %>">
    <% end %>
    <%= link_to '体験してみる', test_path(test), class: 'btn btn-primary' %>
  </div>
<% end %>


<%= render "shared/footer" %>
